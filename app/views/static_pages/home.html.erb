<% if signed_in? %>
	<div class="row">
	    <aside class="span4">
	      <section>
	        <%= render 'shared/user_info', user: current_user %>
	      </section>
	      <section>
	        <%= render 'shared/stats' %>
	      </section>
	      <section>
	        <%= render 'shared/micropost_form',
	         in_reply_to_id: params[:in_reply_to_id] %>
	      </section>
	    </aside>
	    <div class="span8">	    	
	    	<%= render 'shared/feed' %>
	    </div>
	  </div>  
<% else %>
	<%= render 'signup' %>
<% end %>