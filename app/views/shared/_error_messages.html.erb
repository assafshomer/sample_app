<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <u>This form has <%= pluralize(@user.errors.count, "error") %>.</u>
      <ul>
    		<% @user.errors.full_messages.each do |msg| %>
      		<li>*<%= msg %></li>
    		<% end %>
    	</ul>
    </div>    
  </div>
<% end %>