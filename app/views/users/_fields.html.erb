
<%= render 'shared/error_messages', object: f.object %>		
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.text_field :email %>


	<%= f.label :password %>
	<%= f.password_field :password %>			

	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation %>

<% if current_user  %>
	<div class="checkbox">
		<%= f.check_box :recieve_notifications %>
		<%= f.label :recieve_notifications, 'Notify when I gain or lose followers' %>	
	</div>
<% end %>
