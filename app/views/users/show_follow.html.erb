<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info', user: current_user %>
		</section>
		<section>
			<%= render 'shared/stats' %>
			<% if @users_100.any? %>
				<div class="user_avatars">
					<% @users_100.each do |user| %>
						<%= link_to gravatar_for(user, size: 30), user %>
					<% end %>
				</div>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %></h3>
		<% if @users_100.any? %>
			<%= render 'search_users' %>
			<ul class="users">
				<li>
				  <table>  
			  		<%= render @users %>
			    </table>
				</li>   
			</ul>
			<%= will_paginate %>
		<% end %>
	</div>
</div>

