<div class="row">
	<aside class="span4">
		<section>   
			<%= render 'shared/user_info', user: @user %>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>	
		<% if @message %>
			<section>
				<%= render 'shared/message_form', user: @user %>
			</section>	
		<% end %>
	</aside>
	<div class="span8">
		<%= render 'users/follow_form' if signed_in? %>
		<% if @user.microposts.any? %>				
			<h3>Microposts <%= @user.microposts.count %></h3>
			<%= render 'shared/search_microposts', title: "Search content" %>				
			<ol class="microposts">
				<%= render @microposts %> 					
			</ol>		
			<%= will_paginate @microposts %>						
		<% end %>				
	</div>	
</div>