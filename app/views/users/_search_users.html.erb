<div class="row">
	<div class="span6">
		<%= form_tag request.fullpath, method: 'get' do %>
			<table cellpadding="5">
				<tr>
					<td>												
						<%= text_field_tag :search,params[:search] %>						
					</td>					
					<td>
						<%= submit_tag "Search",  
						 id: "users_search_button", class: "btn btn-primary btn-align" %>
					</td>
					<td>
						<%= submit_tag "Clear", 
						 id: "users_clear_search_button", class: "btn btn-primary btn-align" %>
					</td>					
				</tr>
			</table>			
		<% end %>
	</div>
</div>