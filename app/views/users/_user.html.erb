<li>
  <table>
    <tr>
      <td><%= gravatar_for user, size: 30 %></td>
      <td><%= link_to user.name, user %></td>
      <td>|</td> 
      <td><%= mail_to user.email, 'Email' %></td>      
      <% if (current_user.admin? && !current_user?(user) )%>
        <td>|</td> 
        <td><%= link_to 'delete', user, method: :delete, data: {confirm: "Sure?"} %></td>
      <% end %>
    </tr> 
  </table><br/>      
</li> 